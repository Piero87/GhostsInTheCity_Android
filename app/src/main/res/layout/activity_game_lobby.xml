<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ghostsinthecity_android.GameLobby"
    android:background="#000000">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="NEW MISSION"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="PLAYERS :"
        android:id="@+id/textView2"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_alignTop="@+id/sub_players"
        android:layout_toLeftOf="@+id/sub_players"
        android:layout_marginRight="30dp"
        android:gravity="center_vertical|center_horizontal" />

    <TextView
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:id="@+id/n_player_text"
        android:text="2"
        android:editable="false"
        android:gravity="center|center_vertical"
        android:singleLine="false"
        android:textSize="20dp"
        android:inputType="none"
        android:layout_alignTop="@+id/add_players"
        android:layout_toLeftOf="@+id/add_players" />

    <Button
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="START"
        android:id="@+id/create_btn"
        android:layout_marginTop="143dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/create_btn"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="ARENA SIDE METERS :"
        android:id="@+id/textView5"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView"
        android:layout_toRightOf="@+id/create_btn"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/sub_meters"
        android:textSize="30dp"
        android:layout_toRightOf="@+id/textView5"
        android:layout_alignTop="@+id/textView5"
        android:layout_marginLeft="30dp" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/arena_meters"
        android:text="20"
        android:gravity="center|center_vertical"
        android:textSize="22dp"
        android:layout_toRightOf="@+id/sub_meters"
        android:layout_alignTop="@+id/sub_meters"
        android:inputType="none" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/add_meters"
        android:textSize="30dp"
        android:layout_alignTop="@+id/arena_meters"
        android:layout_toRightOf="@+id/arena_meters" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MISSIONS AVAILABLE"
        android:id="@+id/textView3"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/games_list"
        android:layout_below="@+id/textView3"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/view1"
        android:layout_alignRight="@+id/view1" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="+"
        android:id="@+id/add_players"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toLeftOf="@+id/create_btn" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="-"
        android:id="@+id/sub_players"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/n_player_text"
        android:layout_toLeftOf="@+id/n_player_text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="( you will start in the top-right corner )"
        android:id="@+id/textView6"
        android:layout_below="@+id/sub_players"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignRight="@+id/add_meters"
        android:gravity="center_vertical|center_horizontal" />

</RelativeLayout>
